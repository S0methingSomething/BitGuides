{
  "name": "bitguides-docs",
  "version": "1.0.0",
  "description": "Linters for the BitGuides documentation.",
  "private": true,
  "scripts": {
    "check:format": "prettier --check 'docs/**/*.md'",
    "check:spell": "cspell 'docs/**/*.md'",
    "lint": "npm run check:format && npm run check:spell"
  },
  "devDependencies": {
    "cspell": "*",
    "prettier": "*"
  }
}
